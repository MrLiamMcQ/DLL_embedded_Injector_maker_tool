        Title="Embedded Dll Injector Maker" Height="366.923" Width="800"  AllowDrop="True"  Drop="drop_files"
        Closing="closingEvent"
        >
    <Grid Margin="0,0,0,15">
        <Label x:Name="label" Content="DLL Name:" HorizontalAlignment="Left" Margin="56,52,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="203,95,0,0" TextWrapping="Wrap" Text="explorer.exe" VerticalAlignment="Top" Width="184"/>
        <Label x:Name="label1" Content="Target exe for injector:" HorizontalAlignment="Left" Margin="56,91,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Drag &amp; Drop the DLL" HorizontalAlignment="Left" Margin="498,52,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="203,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <Label x:Name="label2" Content="Enter target exe manualy" HorizontalAlignment="Left" Margin="498,95,0,0" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="button" Content="Open Output Location" Margin="433,253,28,0" VerticalAlignment="Top" Height="58" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="&#xD;&#xA;Redo Output File&#xD;&#xA;" HorizontalAlignment="Left" Margin="28,253,0,0" VerticalAlignment="Top" Width="331" Height="58" Click="button_Copy_Click"/>

    </Grid>
</Window>
